---
import '../styles/global.css'
import PawIcon from '../components/PawIcon.astro'
import HeaderPawAnimation from '../components/HeaderPawAnimation.astro'

interface Props {
  title: string
  description?: string
}

const { title, description = '個人サイト' } = Astro.props
const pathname = Astro.url.pathname
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-bg text-text min-h-screen flex flex-col">
    <header class="border-b border-border sticky top-0 bg-bg/90 backdrop-blur-sm z-10 relative">
      <HeaderPawAnimation />
      <nav class="max-w-5xl mx-auto px-8 py-4 flex items-center justify-between relative z-10">
        <a href="/" class="font-extrabold text-base text-brand hover:opacity-80 transition-opacity flex items-center gap-2">
          <PawIcon class="w-5 h-5 text-brand" />
          My Site
        </a>
        <ul class="flex gap-8 text-sm font-semibold">
          <li>
            <a
              href="/"
              class={`transition-colors ${pathname === '/' ? 'text-brand' : 'text-muted hover:text-text'}`}
            >
              Home
            </a>
          </li>
          <li>
            <a
              href="/blog"
              class={`transition-colors ${pathname.startsWith('/blog') ? 'text-brand' : 'text-muted hover:text-text'}`}
            >
              Blog
            </a>
          </li>
        </ul>
      </nav>
    </header>

    <main class="flex-1 w-full">
      <slot />
    </main>

    <footer class="border-t border-border">
      <div class="max-w-5xl mx-auto px-8 py-8 flex items-center justify-center gap-2 text-sm text-muted">
        <PawIcon class="w-4 h-4" />
        <span>&copy; {new Date().getFullYear()} My Site</span>
      </div>
    </footer>
  </body>
</html>
