---
import Layout from '../../layouts/Layout.astro'
import { getCollection, render } from 'astro:content'

export async function getStaticPaths() {
  const posts = await getCollection('blog')
  return posts.map(post => ({
    params: { slug: post.id },
    props: { post },
  }))
}

const { post } = Astro.props
const { Content } = await render(post)
---

<Layout title={`${post.data.title} | My Site`} description={post.data.description}>
  <article>
    <header class="mb-8">
      <a href="/blog" class="text-sm text-gray-400 hover:text-gray-700 transition-colors">
        ‚Üê Blog
      </a>
      <h1 class="text-2xl font-bold mt-4">{post.data.title}</h1>
      <p class="text-sm text-gray-400 mt-2">
        {post.data.pubDate.toLocaleDateString('ja-JP', { year: 'numeric', month: 'long', day: 'numeric' })}
      </p>
      {post.data.tags && (
        <div class="flex gap-2 mt-3">
          {post.data.tags.map(tag => (
            <span class="text-xs px-2 py-1 bg-gray-100 text-gray-600 rounded-full">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="prose prose-gray max-w-none">
      <Content />
    </div>
  </article>
</Layout>
